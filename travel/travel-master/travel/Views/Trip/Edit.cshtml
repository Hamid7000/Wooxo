 @model trip
 @{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/user2_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DASHMIN - Bootstrap Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <!-- sweet alert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Favicon -->
    <link href="~/DashminLib/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/DashminLib/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/DashminLib/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/DashminLib/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/DashminLib/css/style.css" rel="stylesheet">
</head>
<style>

    .btn-orange {
        background-color: #22b3c1;
        color: #fff;
    }
</style>
<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sign In Start -->
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-between mb-3">

                            <h3 class="align-items-center">Edit</h3>
                        </div>
                        <form asp-controller="Trip" asp-action="Edit" method="post">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="TripId" class="form-control" id="floatingInput" placeholder="Enter your Name" disabled style="cursor:not-allowed;">
                                <label for="floatingInput">ID</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Destination" class="form-control" id="floatingInput" placeholder="Enter your Name">
                                <label for="floatingInput">Destination</label>
                                <span asp-validation-for="Destination"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="date" asp-for="StartDate" class="form-control" id="floatingInput" placeholder="Enter your Name">
                                <label for="floatingInput">Start Date</label>
                                <span asp-validation-for="StartDate"></span>
                            </div>
                            <div class="form-floating mb-4">
                                <input type="date" asp-for="EndDate" class="form-control" id="floatingPassword" placeholder="/http.....API">
                                <label for="floatingPassword">End Date</label>
                                <span asp-validation-for="EndDate"></span>

                            </div>
                            <div class="form-floating mb-4">
                                <input type="number" asp-for="TotalBudget" class="form-control" id="floatingPassword" placeholder="/http.....API">
                                <label for="floatingPassword">Total Budget</label>
                                <span asp-validation-for="TotalBudget"></span>

                            </div>
                            <div class="form-floating mb-4">
                                <input type="number" asp-for="RemainingBudget" class="form-control" id="floatingPassword" placeholder="/http.....API">
                                <label for="floatingPassword">Remaining Budget</label>
                                <span asp-validation-for="RemainingBudget"></span>

                            </div>

                            <button type="submit" class="btn btn-orange py-3 w-100 mb-4" >Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
         <!-- Sign In End -->
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/DashminLib/lib/chart/chart.min.js"></script>
    <script src="~/DashminLib/lib/easing/easing.min.js"></script>
    <script src="~/DashminLib/lib/waypoints/waypoints.min.js"></script>
    <script src="~/DashminLib/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/DashminLib/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/DashminLib/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/DashminLib/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/DashminLib/js/main.js"></script>
</body>
</html>