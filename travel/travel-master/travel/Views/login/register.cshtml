@model User
@{
    ViewData["Title"] = "register";
    Layout = "~/Views/Shared/user2_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NGO Registration</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .bdy {
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            max-width: 400px;
            width: 100%;
            color: #333;
            margin-top:5%;
        }

        .btn-orange {
            background-color: #22b3c1;
            color: #fff;
        }

            .btn-orange:hover {
                background-color: #22b3c1;
            }

        .header-text {
            color: #333;
            margin-bottom: 20px;
        }

        .text-orange {
            color: #22b3c1;
        }
    </style>
</head>
<body>

    <div class="bdy">
        <div class="form-container">
            <h2 class="text-center header-text">Register</h2>
            <form asp-controller="login" asp-action="register" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="registerName">Full Name</label>
                    <input asp-for="user_name" type="text" class="form-control" id="registerName" placeholder="Enter your full name">
                </div>
                <span class="text-danger" asp-validation-for="user_name"></span>
                <div class="form-group">
                    <label for="registerEmail">Email address</label>
                    <input asp-for="user_email" type="email" class="form-control" id="registerEmail" placeholder="Enter email">
                </div>
                <span class="text-danger" asp-validation-for="user_email"></span>
                <span class="text-danger">@TempData["ErrorMsg"]</span>
                <div class="form-group">
                    <label for="registerPassword">Password</label>
                    <input asp-for="password" type="password" class="form-control" id="registerPassword" placeholder="Password">
                </div>
                <span class="text-danger" asp-validation-for="password"></span>
                <div class="form-group">
                    <label for="registerDOB">Image</label>
                    <input asp-for="profile_pic" type="file" class="form-control" id="registerDOB">
                </div>
                <button type="submit" class="btn btn-orange btn-block">Register</button>
                <p class="text-center mt-3">Already have an account? <a asp-controller="login" asp-action="login" class="text-orange">Login here</a></p>
            </form>
        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
